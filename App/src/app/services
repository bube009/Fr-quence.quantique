import { Injectable } from '@angular/core';
import { HttpClient } from '@angular/common/http';
import { Observable } from 'rxjs';

@Injectable({
  providedIn: 'root' // Le service est disponible à la racine de l'application
})
export class FrequenciesService {
  private frequenciesUrl = 'assets/frequencies.json'; // Chemin vers votre fichier JSON

  constructor(private http: HttpClient) { }

  /**
   * Récupère la liste des fréquences depuis le fichier JSON.
   */
  getFrequencies(): Observable<any[]> {
    return this.http.get<any[]>(this.frequenciesUrl);
  }
}
